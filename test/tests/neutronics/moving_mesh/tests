[Tests]
  design = 'slab_benchmark.md'
  issues = '#98'
  [cell_tally]
    type = CSVDiff
    input = cell_tally.i
    csvdiff = 'cell_tally_out.csv'
    # This test has very few particles, and OpenMC will error if there aren't enough source particles
    # in the fission bank on a process
    max_parallel = 8
    mesh_mode = 'replicated'
    requirement = "The system shall correctly reinitialize cell tallies when the mesh is moving."
                  "This is tested by applying a displacement field over the geometry."
    heavy = true
  []
  [mesh_tally]
    type = CSVDiff
    input = mesh_tally.i
    csvdiff = 'mesh_tally_out.csv'
    # This test has very few particles, and OpenMC will error if there aren't enough source particles
    # in the fission bank on a process
    max_parallel = 8
    mesh_mode = 'replicated'
    requirement = "The system shall correctly reinitialize mesh tallies when the mesh is moving."
                  "This is tested by applying a displacement field over the geometry."
    heavy = true
  []
[]

